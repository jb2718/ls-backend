<ul id="lists">
	<% @lists.each_with_index do |list, idx| %>
		<% if all_todos_complete?(list[:todos])%>
			<li class="complete">
		<%else%>
			<li>
		<%end%>
			<a href=<%="/lists/#{idx}"%> >
				<h2><%= list[:name] %></h2>
				<p>
					<%= count_completed_todos(list[:todos]) %> /
					<%= list[:todos].size %>		
				</p>
			</a> 
		</li>
	<%end%>
</ul>

<% content_for :header_links do %>
	<a class="add" href="/lists/new">New List</a>
<% end %>
